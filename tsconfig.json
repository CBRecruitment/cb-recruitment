{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "components/Animations/AnimatedTextWord2.js", "components/Animations/AnimatedTextWord.js", "pages/job/[id].jsx", "pages/companies.tsx", "pages/api/jobapplicationform.js", "pages/api/uploadcvform.js"],
  "exclude": ["node_modules"]
}
